# Database Configuration
# Use SQLite for testing (simplest)
DATABASE_URL=sqlite:///./test_nexus.db

# Or use PostgreSQL (uncomment to use)
# DATABASE_URL=postgresql://nexus:your_password@localhost:5432/nexus_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Flask Configuration
FLASK_ENV=testing
SECRET_KEY=test-secret-key-change-in-production
DEBUG=False

# API Keys and Tokens
# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-key-here

# Ollama (local, no key needed by default)
OLLAMA_HOST=http://localhost:11434

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google API Key
GOOGLE_API_KEY=your-google-api-key-here

# Deepseek API Key
DEEPSEEK_API_KEY=your-deepseek-key-here

# Mistral API Key
MISTRAL_API_KEY=your-mistral-key-here

# Together AI API Key
TOGETHER_AI_API_KEY=your-together-ai-key-here

# Cohere API Key
COHERE_API_KEY=your-cohere-key-here

# Perplexity API Key
PERPLEXITY_API_KEY=your-perplexity-key-here

# Replicate API Token
REPLICATE_API_TOKEN=your-replicate-token-here

# HuggingFace Access Token
HUGGINGFACE_API_TOKEN=hf_your-huggingface-token-here

# Airtable Access Token
AIRTABLE_ACCESS_TOKEN=your-airtable-token-here

# Cloudinary API and Secret Keys
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_SECRET_KEY=your-cloudinary-secret

# Openrouter API Key
OPENROUTER_API_KEY=your-openrouter-key-here

# Testing Configuration
TESTING=True
BYPASS_AUTH_FOR_TESTS=True
MOCK_LLM_RESPONSES=True

# Cost Tracking
ENABLE_COST_TRACKING=True
DEFAULT_BUDGET_LIMIT=1000.0

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=True
