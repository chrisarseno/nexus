{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nexus Configuration Schema",
  "description": "Schema for validating Nexus model ensemble configuration",
  "type": "object",
  "required": ["model_ensemble"],
  "properties": {
    "model_ensemble": {
      "type": "object",
      "required": ["models"],
      "properties": {
        "models": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "weight"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "Name of the AI model"
              },
              "weight": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Weight for ensemble voting (0-1)"
              },
              "endpoint": {
                "type": "string",
                "format": "uri",
                "description": "Optional API endpoint for the model"
              },
              "api_key": {
                "type": "string",
                "description": "Optional API key for authentication"
              }
            },
            "additionalProperties": false
          }
        },
        "feedback_loop": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "check_hallucinations": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
        },
        "format": {
          "type": "string"
        }
      }
    }
  }
}
